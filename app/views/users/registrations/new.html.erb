<header>
    <h2>Sign up</h2>
      <%= link_to "トップページへ", root_path %>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

<div class="signup">
<p>該当しない項目には記入する必要はありません</p>
<!--サインアップ時に大学、学部、学科、学年、名前を記入できるようにフォームを追加する-->
<div class="field">
<%= f.label :大学 %><br />
<%= f.text_field :university, autofocus: true %>
</div>

<div class="field">
<%= f.label :学部 %><br />
<%= f.text_field :undergraduate, autofocus: true %>
</div>

<div class="field">
<%= f.label :学科 %><br />
<%= f.text_field :department, autofocus: true %>
</div>

<div class="field">
<%= f.label :回生 %><br />
<%= f.text_field :schoolcount, autofocus: true %>
</div>

<div class="field">
<%= f.label :名前 %><br />
<%= f.text_field :name, autofocus: true %>
</div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規アカウント作成" %>
  </div>
<% end %>

<%#= render "users/shared/links" %>
</div>
